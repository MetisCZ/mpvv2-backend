@{
    ViewBag.Title = "Search Engine";
}

<div class="center-content">
    <button onclick="sendForm();" id="load-data" class="btn ld-ring ld-spin">Zobrazit data</button>
</div>

<div class="center-content">
    <div id="all-tab" class="tab" style="max-width: 1500px; width: 100%;">
        <div id="formdiv" class="tab-part shadow" tab-title="Filtry" style="max-width: 1500px;">
            <div class="shadow">
                <form class="dropdown-content" autocomplete="off" action="javascript:void(0);" onsubmit="sendForm();">
                    <div>
                        <label for="useac">Využít nápovědu</label>
                        <div class="onoffswitch">
                            <input type="checkbox" name="useac" class="onoffswitch-checkbox" id="useac">
                            <label class="onoffswitch-label" for="useac"></label>
                        </div>
                    </div>
                    <div class="autocomplete">
                        <label for="line">Linka</label>
                        <input type="text" name="line" id="line"/>
                    </div>
                    <div>
                        <label for="route">Spoj</label>
                        <input type="text" name="route" id="route"/>
                    </div>
                    <div class="autocomplete">
                        <label for="veh_id">Evidenční číslo</label>
                        <input type="text" name="veh_id" id="veh_id"/>
                    </div>
                    <div class="autocomplete">
                        <label for="carrier">Dopravce</label>
                        <input type="text" name="carrier" id="carrier"/>
                    </div>
                    <div>
                        <label for="fromDate">Od data</label>
                        <input type="date" name="fromDate" id="fromDate"/>
                    </div>
                    <div>
                        <label for="toDate">Do data</label>
                        <input type="date" name="toDate" id="toDate"/>
                    </div>
                    <div class="autocomplete">
                        <label for="veh_type">Typ vozu</label>
                        <input type="text" name="veh_type" id="veh_type"/>
                    </div>
                    <div class="autocomplete">
                        <label for="veh_manuf">Výrobce vozu</label>
                        <input type="text" name="veh_manuf" id="veh_manuf"/>
                    </div>
                    <div>
                        <label for="similar">Vyhledávat podobné výsledky</label>
                        <div class="onoffswitch">
                            <input type="checkbox" name="similar" class="onoffswitch-checkbox" id="similar" checked>
                            <label class="onoffswitch-label" for="similar"></label>
                        </div>
                    </div>
                    <div>
                        <label for="order">Seřadit vozidla podle</label>
                        <select name="order" id="order">
                            <option value="default" selected>Default</option>
                            <option value="reg_num">Veh.ID</option>
                            <option value="manufac_year">Manuf. year</option>
                            <option value="manufacturer_name, vehicle_type">Manufacturer</option>
                            <option value="last_seen">Last seen</option>
                            <option value="air_condition">Air cond.</option>
                            <option value="carrier_name">Carrier</option>
                            <option value="was_in_last">Last/first was in</option>
                            <option value="was_in_count">Was in count</option>
                        </select>
                    </div>
                    <div>
                        <label for="desc">Zapnutí klesajícího seřazení u vozidel</label>
                        <div class="onoffswitch">
                            <input type="checkbox" name="desc" class="onoffswitch-checkbox" id="desc">
                            <label class="onoffswitch-label" for="desc"></label>
                        </div>
                    </div>
                    <div>
                        <label for="orderd">Seřadit spoje podle</label>
                        <select name="orderd" id="orderd">
                            <option value="line">Line</option>
                            <option value="reg_num">Veh. ID</option>
                            <option value="delay">Delay</option>
                            <option value="act_date" selected>Last seen</option>
                            <option value="start_date">First seen</option>
                            <option value="air_condition">Air cond.</option>
                            <option value="route">Route</option>
                            <option value="line, route">Line & route</option>
                            <option value="manufacturer_name, vehicle_type">Manufacturer</option>
                            <option value="was_in">Was in</option>
                        </select>
                    </div>
                    <div>
                        <label for="descd">Zapnutí klesajícího seřazení u spojů</label>
                        <div class="onoffswitch">
                            <input type="checkbox" name="descd" class="onoffswitch-checkbox" id="descd" checked>
                            <label class="onoffswitch-label" for="descd"></label>
                        </div>
                    </div>
                    <div>
                        <label for="limit">Limit</label>
                        <select name="limit" id="limit">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100" selected>100</option>
                            <option value="200">200</option>
                            <option value="350">350</option>
                            <option value="500">500</option>
                            <option value="750">750</option>
                            <option value="1000">1000</option>
                            <option value="1500">1500</option>
                            <option value="2000">2000</option>
                            <option value="5000">5000</option>
                            <option value="10000">10000</option>
                        </select>
                    </div>
                    <div>
                        <label for="show_veh">Zobrazit odpovídající vozidla</label>
                        <div class="onoffswitch">
                            <input type="checkbox" name="show_veh" class="onoffswitch-checkbox" id="show_veh" checked>
                            <label class="onoffswitch-label" for="show_veh"></label>
                        </div>
                    </div>
                    <div>
                        <label for="show_dep">Zobrazit odpovídající spoje</label>
                        <div class="onoffswitch">
                            <input type="checkbox" name="show_dep" class="onoffswitch-checkbox" id="show_dep" checked>
                            <label class="onoffswitch-label" for="show_dep"></label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="tab-part" tab-title="Vozidla">
            <div class="center-content">
                <div id="divTblVeh">
                    <p>Žádná data k zobrazení. Začněte kliknutím na tlačítko "Zobrazit data"</p>
                </div>
            </div>
        </div>

        <div class="tab-part" tab-title="Spoje">
            <div class="center-content">
                <div id="divTblDep">
                    <p>Žádná data k zobrazení. Začněte kliknutím na tlačítko "Zobrazit data"</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(".tab").activateTabs();
</script>
